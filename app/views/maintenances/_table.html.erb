<table class="table table-striped table-bordered" style="text-align:center">
  <thead>
    <tr>
      <th colspan=2 style="text-align:center">Inspect</th>
      <th colspan=2 style="text-align:center">Replace</th>
      <th style="text-align:center">Page</th>
      <th style="text-align:center">PDF</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><% if maintenance.inspectMonths %><%= maintenance.inspectMonths %> months<% end %></td>
      <td><% if maintenance.inspectMiles %><%= maintenance.inspectMiles %> miles<% end %></td>
      <td><% if maintenance.replaceMonths %><%= maintenance.replaceMonths %> months<% end %></td>
      <td><% if maintenance.replaceMiles%><%= maintenance.replaceMiles %> miles<% end %></td>
      <td><%= maintenance.page %></td>
      <td><%= maintenance.pdf %></td>
    </tr>
  </tbody>
</table>
